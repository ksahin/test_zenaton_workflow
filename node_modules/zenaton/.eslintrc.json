{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:node/recommended", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "class-methods-use-this": ["off"],
    "no-console": ["off"],
    "no-underscore-dangle": ["off"],
    "no-use-before-define": ["off"],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": "10.15.2"
      }
    ]
  }
}
